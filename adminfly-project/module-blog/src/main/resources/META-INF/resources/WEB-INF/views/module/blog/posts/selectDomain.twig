{% extends '../layout-link.twig' %}
{% block title %}{{ 'label.select' | translate }} {{ 'label.domain' | translate | lower }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'label.select' | translate }} {{ 'label.domain' | translate | lower }}</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-light mb-3">
                {% include '../partials/posts-header-buttons.twig' %}
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'label.name' | translate }}</th>
                            <th scope="col">{{ 'label.domain' | translate }}</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for domain in domains %}
                                <tr>
                                    {% set select = url('/blog/posts/selectDomain/' ~ domain.id) %}
                                    <td>{{ domain.name }}</td>
                                    <td>{{ domain.domain }}</td>
                                    <td class="text-right">
                                        <button type="button" onclick="location.href='{{ select }}'"
                                                class="btn btn-sm btn-primary">{{ 'label.select' | translate }}</button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}