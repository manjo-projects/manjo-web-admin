<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.papaja.adminfly</groupId>
        <artifactId>papaja-adminfly-project</artifactId>
        <version>1.0</version>
    </parent>

    <artifactId>papaja-adminfly-build</artifactId>
    <version>1.0</version>
    <packaging>war</packaging>

    <name>PapaJa Adminfly - Build (Spring Endpoint)</name>

    <properties>
        <buildName>papaja-adminfly</buildName>
        <papaja.adminfly.module.admin.version>1.0</papaja.adminfly.module.admin.version>
        <papaja.adminfly.module.blog.version>1.0</papaja.adminfly.module.blog.version>
        <papaja.adminfly.module.mongodb-viewer.version>1.0</papaja.adminfly.module.mongodb-viewer.version>
        <papaja.adminfly.module.key-vault.version>1.0</papaja.adminfly.module.key-vault.version>
        <papaja.adminfly.module.shopper.version>1.0</papaja.adminfly.module.shopper.version>
        <papaja.adminfly.module.psy-tests.version>1.0</papaja.adminfly.module.psy-tests.version>
    </properties>

    <profiles>
        <profile>
            <id>mdbv</id>
            <dependencies>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-admin</artifactId>
                    <version>${papaja.adminfly.module.admin.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-mdbv</artifactId>
                    <version>${papaja.adminfly.module.mongodb-viewer.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-admin</artifactId>
                    <version>${papaja.adminfly.module.admin.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-kv</artifactId>
                    <version>${papaja.adminfly.module.key-vault.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-blog</artifactId>
                    <version>${papaja.adminfly.module.blog.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-mdbv</artifactId>
                    <version>${papaja.adminfly.module.mongodb-viewer.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-shopper</artifactId>
                    <version>${papaja.adminfly.module.shopper.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.papaja.adminfly</groupId>
                    <artifactId>papaja-adminfly-module-psy</artifactId>
                    <version>${papaja.adminfly.module.psy-tests.version}</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <inherited>false</inherited>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <port>8080</port>
                    <path>/adminfly</path>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.papaja.adminfly</groupId>
            <artifactId>papaja-adminfly-commons</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>${javax.servlet.api.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

</project>