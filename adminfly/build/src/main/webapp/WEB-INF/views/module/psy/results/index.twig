{% extends '../layout.twig' %}
{% block content %}
    {% include './../_partials/patient-current.twig' %}
    <div class="page-header mb-4">
        <h1>{{ 'label.results' | translate }}</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-light mb-3">
                <ul class="list-group">
                    {% for result in results %}
                        {% set view = url('/psy/results/' ~ result.id) %}
                        {% set patient = result.getPatient() %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ patient.sexEmoji }}&nbsp;{{ patient.name }}&nbsp;{{ patient.surname }}&nbsp;â€”&nbsp;[{{ result.test }}]
                            <div class="float-right">
                                <button type="button" onclick="location.href='{{ view }}'"
                                        class="btn btn-sm btn-success">{{ 'label.view' | translate }}
                                </button>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}