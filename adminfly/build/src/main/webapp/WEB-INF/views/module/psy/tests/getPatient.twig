{% extends '../layout.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="list-group">
                {% for item in items %}
                    {% set activate = url('/psy/patients/activate/' ~ item.id) ~ "?test=" ~ test %}
                    <a href="{{ activate }}" class="list-group-item list-group-item-action">
                        <h4 class="mb-0">
                            {% if item.sex == 'F' %}&#127825;{% else %}&#127820;{% endif %}&nbsp;{{ item.name }}&nbsp;{{ item.surname }}
                        </h4>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-6">
            {% include './../_partials/patient-form.twig' %}
        </div>
    </div>
{% endblock %}