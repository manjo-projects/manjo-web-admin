{% extends './../layout.twig' %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'label.tests' | translate }}</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-light mb-3">
                <div class="card-header">
                    {{ 'label.patients' | translate }}
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">{{ 'label.name' | translate }}</th>
                            <th scope="col">{{ 'label.code' | translate }}</th>
                            <th scope="col" class="w-25"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            {% set start = url('/psy/tests/start/' ~ item.code) %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td><code>{{ item.code }}</code></td>
                                <td>
                                    <button type="button" onclick="location.href='{{ start }}'"
                                            class="btn btn-sm btn-info">{{ 'label.start' | translate }}
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}