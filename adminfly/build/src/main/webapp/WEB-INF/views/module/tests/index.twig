{% extends './../layout.twig' %}
{% block content %}
    {% include './../_partials/patient-current.twig' %}
    <div class="page-header mb-4">
        <h1>{{ 'label.tests' | translate }}</h1>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-light mb-3">
                <div class="card-header">
                    {{ 'label.tests' | translate }}
                </div>
                <ul class="list-group">
                    {% for item in items %}
                        {% set start = url('/psy/' ~ item) %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ item.getName() }}&nbsp;[{{ item }}]
                            <div class="float-right">
                                <button type="button" onclick="location.href='{{ start }}'"
                                        class="btn btn-sm btn-info">{{ 'label.start' | translate }}
                                </button>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}