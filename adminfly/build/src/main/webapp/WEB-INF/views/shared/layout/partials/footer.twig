<footer id="footer">
    <div class="row">
        <div class="col-lg-12">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <p>
                        {% for item in extra.get('values.footer.links') %}
                            {% set bullet = (loop.last) ? '' : '&bull;' %}
                            <a class="text-white" href="{{ item.href }}" target="_blank">{{ item.label }}</a> {{ bullet }}
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>