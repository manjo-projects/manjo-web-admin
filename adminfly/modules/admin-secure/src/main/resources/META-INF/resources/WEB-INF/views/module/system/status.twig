{% extends '../layout-link.twig' %}
{% block title %}{{ 'title.status' | translate }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <h1 id="tables">{{ 'label.system' | translate }}</h1>
    </div>
    {% include 'partials/buttons.twig' %}
    <div class="row">
        <div class="col-lg-6">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ 'label.os' | translate }}</h5>
                    </div>
                    <small>{{ info.os }}</small>
                </a>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ 'label.javaVersion' | translate }}</h5>
                    </div>
                    <small>{{ info.version }}</small>
                </a>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ 'label.memory' | translate }}</h5>
                    </div>
                    <p class="mb-0">{{ 'label.total' | translate }} / {{ 'label.free' | translate }}</p>
                    <small>{{ info.total }} MiB / {{ info.free }} MiB</small>
                </a>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ 'label.used' | translate }}</h5>
                    </div>
                    <small>{{ info.used }} MiB</small>
                    <div class="progress mt-1">
                        <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                             style="width: {{ info.usedPercent }}%" aria-valuenow="{{ info.usedPercent }}"
                             aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ 'label.max' | translate }}</h5>
                    </div>
                    <small>{{ info.maximum }} MiB</small>
                    <div class="progress mt-1">
                        <div class="progress-bar progress-bar-striped bg-danger" role="progressbar"
                             style="width: {{ info.maximumPercent }}%" aria-valuenow="{{ info.maximumPercent }}"
                             aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </a>
                <div class="card-footer">
                    <button type="button" onclick="location.href='{{ url('/secure/system/gc') }}'" type="button"
                            class="btn btn-secondary">{{ 'text.runGc' | translate }}</button>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card border-light mb-3">
                        {% set currentLocale = languages.currentLocale %}
                        <div class="card-header">{{ 'label.locale' | translate }} ({{ currentLocale.getCode() }})</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ 'label.languages' | translate }}</h4>
                            <p class="card-text">
                                {{ currentLocale.language.getName() }} ({{ currentLocale.language.getLocal() }})
                            </p>
                            <h4 class="card-title">{{ 'label.country' | translate }}</h4>
                            <p class="card-text">
                                <img class="lang-icon"
                                     src="{{ asset('icons/flags/' ~ lower(currentLocale.country.code) ~ '.svg') }}">&nbsp;{{ currentLocale.country.getName() }}
                                ({{ currentLocale.country.getLocal() }})
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="card border-light mb-3">
                        <div class="card-header">{{ 'label.about' | translate }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ 'label.author' | translate }}</h4>
                            <p class="card-text">
                                <button type="button" class="btn btn-info">{{ 'label.ih' | translate }}</button>
                            </p>
                            <h4 class="card-title">{{ 'label.github' | translate }}</h4>
                            <p class="card-text">
                                <button onclick="window.location='https://github.com/PapajaOrg/Adminfly'" type="button"
                                        class="btn btn-info">AdminFly
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}